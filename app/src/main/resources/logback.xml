<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Property definitions -->
    <property name="LOG_LEVEL" value="${LOG_LEVEL:-INFO}"/>
    <property name="LOG_PATH" value="${LOG_PATH:-./logs}"/>

    <!-- Console Appender with JSON format -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- Custom JSON format -->
            <includeContext>true</includeContext>
            <includeMdc>true</includeMdc>
            <customFields>{"service":"todo-api"}</customFields>

            <!-- Field names customization -->
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <thread>thread</thread>
                <level>level</level>
                <logger>logger</logger>
                <message>message</message>
                <mdc>context</mdc>
            </fieldNames>

            <!-- Pattern for structured fields -->
            <pattern>
                {
                "timestamp": "%d{yyyy-MM-dd'T'HH:mm:ss.SSSX}",
                "thread": "%{thread}",
                "level": "%level",
                "logger": "%logger{36}",
                "message": "%message",
                "context": "%X",
                "exception": "%ex"
                }
            </pattern>
        </encoder>
    </appender>

    <!-- SQL execution logging is logged to the LoggerListener logger at DEBUG level -->
    <Logger name="org.jooq.tools.LoggerListener" level="debug" />

    <!-- Other jOOQ related debug log output -->
    <Logger name="org.jooq" level="debug" />

    <Logger name="org.eclipse.jetty.server" level="INFO"/>

    <!-- Root logger -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>